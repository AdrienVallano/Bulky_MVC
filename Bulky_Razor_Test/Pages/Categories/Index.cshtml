@page
@model Bulky_Razor_Test.Pages.Categories.IndexModel
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-secondary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-page="categories/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Category</a>
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Category/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 rounded"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-page="Category/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>
