@model Category

<form method="post">
    <input asp-for="Id" hidden /> @* A utiliser si un enregistrement se crée au lieu de mettre à jour donc mettre le champ caché qui doit être renseigner en debug *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Edit Category</h2>
        </div>
    </div>
    @* <div asp-validation-summary="ModelOnly"></div> *@
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="pt-0"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="pt-0"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Update</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control btn-outline-secondary">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}