@model IEnumerable<Produit>
@{
    ViewData["Title"] = "Accueil";
}

<div class="row pb-3">
    @foreach (var produit in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@produit.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-75 text-uppercase text-center">
                                    @produit.Titre
                                </p>
                                <p class="card-title text-warning text-center">
                                    by
                                    <b>@produit.Auteur</b>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-75 text-center">
                                    Prix cataligue :
                                    <span class="text-decoration-line-through">
                                        @produit.ListePrix.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-75 text-center">
                                    Prix le plus bas :
                                    <span>
                                        @produit.Prix100.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-controller="Home" asp-action="Details" asp-route-produitId="@produit.Id" 
                            class="btn btn-primary bg-gradient border-0 form-control">Détails</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>